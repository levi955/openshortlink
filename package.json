{
  "name": "openshortlink",
  "version": "1.0.0",
  "description": "OpenShort.link - Open-source Cloudflare-based link shortener and management platform",
  "overrides": {
    "js-yaml": ">=4.1.1",
    "esbuild": ">=0.25.12"
  },
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "migrate": "wrangler d1 migrations apply openshortlink-db",
    "migrate:local": "wrangler d1 migrations apply openshortlink-db --local",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:api": "./test/scripts/test-api.sh",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "cloudflare",
    "workers",
    "link-shortener",
    "analytics",
    "url-shortener"
  ],
  "author": "",
  "license": "CPAL-1.0",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "hono": "^4.10.4",
    "otpauth": "^9.4.1",
    "zod": "^4.1.12"
  }
}