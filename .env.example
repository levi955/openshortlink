# NASDAQ 100 Futures Trading Bot Configuration
# Copy this file to .env and fill in your values

# Trading Configuration
TRADING_MODE=futures
SYMBOL=NQ
CONFLUENCE_SYMBOL=ES

# Account Settings  
ACCOUNT_BALANCE=100000
RISK_PERCENT=1.0
MAX_POSITION_SIZE=5

# Trading Rules
MAX_TRADES_PER_DAY=1
MIN_SETUP_SCORE=5
STOP_LOSS_PERCENT=0.5
TAKE_PROFIT_PERCENT=1.0

# Market Data Settings
MARKET_DATA_PROVIDER=mock
MARKET_DATA_API_KEY=your_api_key_here
HISTORICAL_DATA_DAYS=30

# News Settings
NEWS_UPDATE_INTERVAL=300000
FOREX_FACTORY_URL=https://www.forexfactory.com/calendar
FILTER_RED_FOLDER_NEWS=true
NEWS_IMPACT_THRESHOLD=medium

# Timing and Monitoring
DELAY_MIN=1000
DELAY_MAX=3000
MONITORING_INTERVAL=10000

# Learning and Analytics
ENABLE_LEARNING=true
PATTERN_LEARNING=true
MEMORY_SIZE=1000

# Safety Settings
STOP_ON_LOSS=true
MAX_LOSS_STREAK=3
TAKE_SCREENSHOT=true
BALANCE_PROTECTION_THRESHOLD=0.1

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false
SAVE_LOGS=true

# Legacy Mining Bot Settings (Deprecated)
# These are kept for backward compatibility but not used in trading mode