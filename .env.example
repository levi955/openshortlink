# Mining Bot Configuration
# Copy this file to .env and fill in your values

# Site Configuration
SITE_URL=https://example-mining-site.com
USERNAME=your_username
PASSWORD=your_password

# Bot Behavior Settings
HEADLESS=true
AUTO_PLAY=false
DELAY_MIN=1000
DELAY_MAX=3000
MAX_GAMES=10

# Safety Settings
STOP_ON_LOSS=true
MAX_LOSS_STREAK=3
TAKE_SCREENSHOT=true

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false
SAVE_LOGS=true

# Advanced Settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
VIEWPORT_WIDTH=1366
VIEWPORT_HEIGHT=768