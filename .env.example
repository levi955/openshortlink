# Mining Bot Configuration for Bandit.camp
# Copy this file to .env and fill in your values

# Bandit.camp Site Configuration
SITE_URL=https://bandit.camp/mines
STEAM_USERNAME=your_steam_username
STEAM_PASSWORD=your_steam_password
STEAM_GUARD_CODE=your_steam_guard_code

# Bot Behavior Settings
HEADLESS=true
AUTO_PLAY=true
DELAY_MIN=1000
DELAY_MAX=3000
MAX_GAMES=50

# Bandit.camp Betting Settings
INITIAL_BET_AMOUNT=1.00
MIN_BET_AMOUNT=0.10
MAX_BET_AMOUNT=100.00
BET_MULTIPLIER=1.5
MIN_MINES=3
MAX_MINES=24

# Advanced Betting Strategies
BETTING_STRATEGY=adaptive
CONSERVATIVE_MULTIPLIER=1.2
AGGRESSIVE_MULTIPLIER=2.5
BALANCE_PROTECTION_THRESHOLD=0.1
PROFIT_TARGET_MULTIPLIER=1.5

# Smart Cheating Settings
ENABLE_SMART_CHEATING=true
WIN_RATE_THRESHOLD=0.3
CHEATING_CONFIDENCE_LEVEL=0.85
MAX_CONSECUTIVE_LOSSES=5

# Safety Settings
STOP_ON_LOSS=true
MAX_LOSS_STREAK=3
TAKE_SCREENSHOT=true
AUTO_CASHOUT=true
CASHOUT_MULTIPLIER=2.0

# Steam Authentication
STEAM_AUTO_LOGIN=true
STEAM_REMEMBER_LOGIN=true
STEAM_SESSION_TIMEOUT=3600000

# Anti-Detection Features
HUMAN_LIKE_DELAYS=true
RANDOM_MOUSE_MOVEMENTS=true
BROWSER_FINGERPRINT_ROTATION=true
SESSION_ROTATION_INTERVAL=1800000

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false
SAVE_LOGS=true

# Advanced Settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
VIEWPORT_WIDTH=1366
VIEWPORT_HEIGHT=768