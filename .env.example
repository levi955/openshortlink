# Ultimate Mine Bot Environment Configuration
# Copy this file to .env and customize your settings

# ============================================================================
# BASIC SETTINGS
# ============================================================================

# Default bet amount (in the site's currency)
DEFAULT_BET_AMOUNT=0.01

# Game configuration
MINE_COUNT=3         # Number of mines in the game
GRID_SIZE=25         # Total grid squares (5x5 = 25)

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

# Maximum and minimum bet amounts
MAX_BET_AMOUNT=1.0
MIN_BET_AMOUNT=0.001

# Stop loss and take profit (in currency units)
STOP_LOSS=10.0       # Stop if losses exceed this amount
TAKE_PROFIT=50.0     # Stop if profits exceed this amount

# ============================================================================
# STRATEGY SETTINGS
# ============================================================================

# Conservative mode (prefer corners/edges on first clicks)
CONSERVATIVE_MODE=True

# Auto cashout after N safe squares revealed
AUTO_CASHOUT_AFTER=3

# ============================================================================
# AUTOMATION SETTINGS
# ============================================================================

# Delay between clicks (seconds) - don't set too low to avoid detection
CLICK_DELAY=1.0

# Page load timeout (milliseconds)
PAGE_LOAD_TIMEOUT=30000

# ============================================================================
# AUTHENTICATION (if required)
# ============================================================================

# Account credentials - leave empty if not needed
USERNAME=
PASSWORD=

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=mine_bot.log